{
    "compilerOptions": {
        // "declaration": true,
        "module": "CommonJS",
        "target": "ES2016",
        "outDir": "./out",
        "rootDir": "./src",
        // "removeComments": true,
        "noImplicitAny": true,
        "sourceMap": true,
        // "inlineSources": true,
        // "isolatedModules": false,
        // "allowSyntheticDefaultImports": true,
        // "allowUmdGlobalAccess": true, // For D3.js
        "moduleResolution": "node",
        // "experimentalDecorators": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "lib": ["ES2023", "dom"]
    },
    "compileOnSave": true,
    "include": ["**/*"],
    "exclude": ["node_modules", "**/*.d.ts"]
}