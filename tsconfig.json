{
    "compilerOptions": {
        "declaration": true,
        "module": "CommonJS",
        "target": "ES2022",
        "outDir": "out",
        "removeComments": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "inlineSources": true,
        // "isolatedModules": false,
        // "allowSyntheticDefaultImports": true,
        // "allowUmdGlobalAccess": true, // For D3.js
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "lib": ["ES2020", "dom"]
    },
    "compileOnSave": true,
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "**/*.d.ts"]
}